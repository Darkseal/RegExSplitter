@{
    ViewData["Title"] = Resources.Index.Page_Title;
}
@section Scripts  {
    <script src="~/js/regexp-splitter.min.js"></script>
}

@* Fork me on GitHub ribbon *@
<a href="https://github.com/Darkseal/RegExSplitter" target="_blank"><img style="position: absolute; top: 50px; right: 0; border: 0;" src="https://s3.amazonaws.com/github/ribbons/forkme_right_orange_ff7600.png" alt="Fork me on GitHub"></a>

<div class="jumbotron">
    <div class="container">
        <h1 class="display-4">@Resources.Index.Title</h1>
        <p class="display-sub">@Resources.Index.Description</p>
        <p>
            <a class="btn btn-success" href="https://www.ryadel.com/en/portfolio/regexsplitter-en/" role="button" target="_blank">
                <i class="fas fa-book-dead"></i>&nbsp; Read the docs
            </a>
            <a class="btn btn-success" href="https://github.com/Darkseal/RegExSplitter" role="button" target="_blank"><i class="fab fa-github">
                </i>&nbsp; GitHub Page
            </a>
            <a class="btn btn-success" href="https://io.ryadel.com/" role="button" target="_blank"><i class="fas fa-project-diagram">
                </i>&nbsp; Other Ryadel.IO tools
            </a>
        </p>
        </div>
    </div>

    <div class="container">
    <!-- 1 column -->
    <div>
        <form>
            <div class="form-group">
                <label for="txtSingle" class="big-label">@Resources.Index.txtSingle_Label</label>
                <textarea id="txtSingle" name="txtSingle" class="form-control txt-single" aria-describedby="Single-Line" 
                    placeholder="@Resources.Index.txtSingle_Placeholder"></textarea>
                <small id="txtSingleHelp" class="form-text text-muted">@Html.Raw(Resources.Index.txtSingle_Help)</small>
            </div>
            <div class="form-group">
                <label for="txtMulti" class="big-label">@Resources.Index.txtMulti_Label</label>
                <textarea id="txtMulti" name="txtSource" class="form-control txt-multi" aria-describedby="Multi-Line" 
                    placeholder="@Resources.Index.txtMulti_Placeholder" readonly></textarea>
                <small id="txtMultiHelp" class="form-text text-muted">@Html.Raw(Resources.Index.txtMulti_Help)</small>
            </div>
            <div class="form-row align-items-center">
                <div class="col-auto">
                    <label for="txtNumChars" class="small-label">@Resources.Index.txtNumChars_Text</label>
                </div>
                <div class="col-auto">
                    <input type="number" id="txtNumChars" name="txtNumChars" class="form-control mb-2" value="50" style="width: 80px;" />
                </div>
            </div>
            <button id="btnConvert" name="btnConvert" type="button" class="btn btn-primary btn-lg">
                <i class="fas fa-sync"></i>&nbsp; @Resources.Index.btnConvert_Text
            </button>
        </form>
    </div>
</div>
