<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @Resources.Shared.Site_Title</title>

    <environment include="Development">
        @* files put here will be available in Development environment only *@
    </environment>
    <environment exclude="Development">
        @* files put here will be available in all environments except Development *@
    </environment>
    <environment include="Production">
        @* files put here will be available in Production environment only *@

        @* Global site tag (gtag.js) - Google Analytics *@
        <script async src="https://www.googletagmanager.com/gtag/js?id=UA-55895187-11"></script>
        <script>
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());

          gtag('config', 'UA-55895187-11');
        </script>

        @* Google AdSense Auto-Ads *@
        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
        <script>
             (adsbygoogle = window.adsbygoogle || []).push({
                  google_ad_client: "ca-pub-0289121473946612",
                  enable_page_level_ads: true
             });
        </script>
    </environment>

    @* Bootstrap CSS *@
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" 
        asp-fallback-href="~/lib/bootstrap/4.1.3/css/bootstrap.min.css"
        asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute"
        />

    @* Bootstrap Optional JavaScript Files (jQuery, popper.js, bootstrap.js) *@
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"
            asp-fallback-src="~/lib/jquery/3.3.1/jquery-3.3.1.min.js"
            asp-fallback-test="window.jQuery"
            crossorigin="anonymous">
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
            asp-fallback-src="~/lib/popper.js/1.14.3/popper.min.js"
            asp-fallback-test="Popper"
            crossorigin="anonymous">
    </script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"
            asp-fallback-src="~/lib/bootstrap/4.1.3/js/bootstrap.min.js"
            asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
            crossorigin="anonymous">
    </script>

    @* Additional (custom) CSS & JS *@
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />

    @* HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries *@
    @* WARNING: Respond.js doesn't work if you view the page via file:// *@
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    @* FontAwesome - JS+SVG mode *@
    <script defer src="~/lib/fontawesome/5.5.0/js/all.js"></script>

    @* Favicon *@
    <link rel="apple-touch-icon" sizes="180x180" href="images/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="images/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="images/favicon/favicon-16x16.png">
    <link rel="manifest" href="images/favicon/manifest.json">
    <meta name="msapplication-config" content="images/favicon/browserconfig.xml">
    <meta name="theme-color" content="#ffffff">
</head>
<body>

    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
      <a class="navbar-brand" href="https://www.ryadel.com/">
          <img src="/images/Logo.Ryadel.svg" width="60" alt="Ryadel">
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" 
        aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="https://github.com/Darkseal/RegExSplitter">GitHub</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Ryadel.IO
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdown01">
              <a class="dropdown-item" href="#">Ryadel.IO Project Page</a>
              <div class="dropdown-divider" href="#"></div>
              <a class="dropdown-item" href="https://regexsplitter.ryadel.com/">RegEx Splitter</a>
              <a class="dropdown-item" href="https://regexslasher.ryadel.com/">RegEx Slasher</a>
            </div>
          </li>
        </ul>
        <form method="get" action="https://www.ryadel.com/en/" class="form-inline my-2 my-lg-0" target="_blank">
          <input id="s" name="s" class="form-control mr-sm-2" type="text" placeholder="@Resources.Shared.btnNavBarSearch_Placeholder" aria-label="Search">
          <button id="btnNavBarSearch" class="btn btn-info my-2 my-sm-0" type="submit">
            @Resources.Shared.btnNavBarSearch_Text
          </button>
        </form>
      </div>
    </nav>

    <main role="main">
        @RenderBody()
    </main>

    <hr>

    <footer class="container">
        @Html.Raw(Resources.Shared.Footer_Text)
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
